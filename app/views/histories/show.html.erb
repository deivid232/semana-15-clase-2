<div class="container">

      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <%= image_tag(@history.picture_url, style: "max-width: 100%; border-radius: 10px;") if @history.picture? %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <h1><%= @history.title %></h1>
          <small><%= time_ago_in_words(@history.created_at) %> ago</small>
        </div>
      </div>

      <hr>
      <div class="row">
        <div class="col-md-8">
          <p><%= @history.content %></p>
        </div>
      <br>
      <% @histories.each do |history| %>

          <div class="col-md-10">
            <% if history.user == current_user || current_user.admin? %>
                <%= link_to 'Edit', edit_history_path(history), class: "btn btn-warning btn-sm" %>
                <%= link_to 'Back', histories_path, class: "btn btn-info btn-sm" %>
              <% end %>
            </div>

        <% end %>


      </div>
